    Contrast 256/2
}


Display MI240 {
    Driver 'MilfordInstruments'
    Model 'MI240'
    Port '/dev/tts/0'
    Speed 19200
}


Display CW12232 {
    Driver 'Cwlinux'
    Model 'CW12232'
    Port '/dev/usb/tts/0'
    Speed 19200
