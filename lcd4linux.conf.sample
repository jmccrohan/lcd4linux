    Backlight 100
    Icons 1
}

Display CF632 {
    Icons 7
    Driver 'Crystalfontz'
    Model '632'
    Port '/dev/tts/0'
    Speed 19200
}

Display CF633 {
    Icons 4
    Driver 'Crystalfontz'
